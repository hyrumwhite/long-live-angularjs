.main {
  display: flex;
  flex-direction: column;
  height: 100%;
  width:100%;
  .main-nav {
    box-shadow: 0 1px 5px 0 rgba(0,0,0,.2), 0 2px 2px 0 rgba(0,0,0,.14), 0 3px 1px -2px rgba(0,0,0,.12);
    flex-shrink: 0;
    width: 100%;
    height: 4rem;
    display: flex;
    align-items: center;
    background: #646464;
    .logo {
      height: 4rem;
      width: 4rem;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 3rem;
      color:white;
    }
    .links {
      margin-left: 1.5rem;
      a {
        color:white;
        text-decoration: none;
        margin-right: 2rem;
        &:hover {
          text-decoration: underline;
        }
      }
    }
  }
  .view-container {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    overflow-y: auto;
    overflow-x: hidden;
  }
}
